@model AnimalStoreMvc.Models.Domain.Animal
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
}

<form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">@localizer["AddAnimal"]</h2>

    <div class="input-container">
        <label asp-for="Title" class="w-40">@localizer["Title"]</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Finder" class="w-40">@localizer["Image"]</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Animaltype" class="w-40">@localizer["Animaltype"]</label>
        <select asp-items="Model.AnimaltypeList" class="input" asp-for="Animaltype" multiple>
            <option value="">--select--</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Animaltype"> </span>
    </div>

    <div class="input-container">
        <label asp-for="ReleaseYear" class="w-40">@localizer["ReleasedYear"]</label>
        <input type="text" class="input" asp-for="ReleaseYear">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ReleaseYear"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Cast" class="w-40">Cast</label>
        <input type="text" class="input" asp-for="Cast">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Cast"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Finder" class="w-40">@localizer["Finder"]</label>
        <input type="text" class="input" asp-for="Finder">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Finder"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">@localizer["Save"]</button>
        <a class="btn btn-sec" href="/Animal/AnimalList">@localizer["Allrecordes"]</a>
    </div>
</form>