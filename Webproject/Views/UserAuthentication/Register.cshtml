@model AnimalStoreMvc.Models.DTO.RegistrationModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
}

<form class="w-40" asp-action="Register" method="post">
    <h2 class="pb-10">@localizer["Register"]</h2>
    <div class="input-container">
        <label asp-for="Username" class="w-40">@localizer["Username"]</label>
        <input type="text" class="input" asp-for="Username">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>


    <div class="input-container">
        <label asp-for="Password" class="w-40">@localizer["Password"]</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>

    <div class="input-container">
        <label asp-for="PasswordConfirm" class="w-40">@localizer["Password"]</label>
        <input type="password" class="input" asp-for="PasswordConfirm">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="PasswordConfirm"></span>
    </div>


    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">@localizer["Register"]</button>
        @*<a class="btn btn-sec" href="#">Add more</a>*@
    </div>
</form>
