@model AnimalStoreMvc.Models.Domain.Animaltype
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
}

<form class="w-40" asp-action="Add" method="post">
    <h2 class="pb-10">@localizer["Animaltype"]</h2>
    <div class="input-container">
        <label asp-for="AnimaltypeName" class="w-40">@localizer["Animaltype"]</label>
        <input type="text" class="input" asp-for="AnimaltypeName">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="AnimaltypeName"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">@localizer["Save"]</button>
        <a class="btn btn-sec" href="/Animaltype/AnimaltypeList">@localizer["Allrecordes"]</a>
    </div>
</form>